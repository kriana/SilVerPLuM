{
    "id": "storm",
    "name": "STORM",
    "author": "demmonic",
    "license": "GPLv3",
    "url": "https://github.com/demmonic/Storm",
    "version": "1.0.0",
    "requires": ["stardewvalley>=1.1", "stardewvalley<1.2"],
    "content": {
        "storm": {
            "name": "STORM API",
            "description": "Contains the DLL and a launcher. You need to activate the launcher in the configuration tab to be able to use STORM mods.",
            "default": true,
            "platforms": ["windows", "linux", "mac"],
            "priority": 0,
            "pipeline": "compile-dll",
            "nuget-restore": true,
            "references": {},
            "build-parameters": {
                "windows": ["/p:Configuration=Release"],
                "linux": ["/p:Configuration=Release"],
                "mac": ["/p:Configuration=Release"]
            },            
            "installables": {
                "StormLoader": "StormLoader",
                "Storm/bin/Release/StormLoader.exe": "StormLoader.exe",
                "Storm/bin/Release/Castle.Core.dll": "Castle.Core.dll",
                "Storm/bin/Release/Mono.Cecil.dll": "Mono.Cecil.dll",
                "Storm/bin/Release/Mono.Cecil.Mdb.dll": "Mono.Cecil.Mdb.dll",
                "Storm/bin/Release/Mono.Cecil.Pdb.dll": "Mono.Cecil.Pdb.dll",
                "Storm/bin/Release/Mono.Cecil.Rocks.dll": "Mono.Cecil.Rocks.dll",
                "Storm/bin/Release/Newtonsoft.Json.dll": "Newtonsoft.Json.dll"
            },
            "launchers": {
                "storm-launcher": {
                    "name": "Stardew Valley STORM",
                    "description": "Runs Stardew Valley with STORM mods.",
                    "executables": {
                        "windows": {
                            "executable": "stardewvalley://StormLoader.exe",
                            "arguments": []
                        },
                        "mac": {
                            "executable": "stardewvalley://StormLoader",
                            "arguments": []
                        },
                        "linux": {
                            "executable": "stardewvalley://StormLoader",
                            "arguments": []
                        }
                    }
                }
            }
        }
    }
}
